{
  "name": "Google-Play-Books-Desktop",
  "version": "1.0.6",
  "description": "A desktop client for Google PlayBooks",
  "main": "main.js",
  "scripts": {
    "start": "tsc && electron .",
    "dist": "build",
    "lint": "tslint -c tslint.json 'src2/test/*.{ts,tsx}' --exclude 'src2/**/*.d.ts'",
    "pretest": "npm run lint",
    "test": "jest ./test --watch"
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "build": {
    "appId": "gbooksapp",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "devDependencies": {
    "@types/core-js": "^0.9.43",
    "@types/jest": "^22.2.3",
    "electron": "~1.7.8",
    "electron-builder": "^19.45.4",
    "electron-builder-squirrel-windows": "^19.45.0",
    "lite-server": "^2.3.0",
    "ts-jest": "^22.4.6"
  },
  "dependencies": {
    "@types/electron-store": "^1.2.0",
    "@types/handlebars": "^4.0.36",
    "@types/jquery": "^3.2.15",
    "@types/request": "^2.0.7",
    "electron-pdf-window": "^1.0.12",
    "electron-store": "^1.3.0",
    "epubjs": "^0.2.21",
    "file-url": "^2.0.2",
    "googleapis": "^30.0.0",
    "handlebars": "^4.0.11",
    "inversify": "^4.13.0",
    "is-online": "^7.0.0",
    "jest": "^22.4.4",
    "jquery": "^3.2.1",
    "photonkit": "^0.1.2",
    "reflect-metadata": "^0.1.12",
    "request": "^2.83.0",
    "rxjs": "^5.5.2",
    "semantic-ui": "^2.2.13",
    "typescript": "^2.8.3",
    "winston": "^3.0.0-rc5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$"
  }
}
